# Server Configuration
NODE_ENV="development" # Options: 'development', 'production'
HOST="localhost"       # Hostname for the server
PORT="8080"            # The port your server will listen on
CORS_ORIGIN="http://localhost:3000" # Allowed CORS origin, adjust as necessary

# Rate Limiting
COMMON_RATE_LIMIT_WINDOW_MS="1000"  # Window size for rate limiting (ms)
COMMON_RATE_LIMIT_MAX_REQUESTS="1000" # Max number of requests per window per IP

# Database Configuration (PostgreSQL)
DB_HOST="localhost"
DB_PORT="5432"
DB_NAME="webos_homescreen"
DB_USER="postgres"
DB_PASSWORD="postgres"

# JWT Configuration
JWT_SECRET="your-secret-key-change-in-production" # CHANGE THIS IN PRODUCTION!
JWT_EXPIRES_IN="24h"

# File Upload
MAX_FILE_SIZE="10485760" # 10MB in bytes
UPLOAD_PATH="./uploads"
